# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/orchestrator

# Redis
REDIS_URL=redis://localhost:6379/0

# Stage Timeouts (seconds)
PLANNING_TIMEOUT=300
PARSING_TIMEOUT=120
ENRICHING_TIMEOUT=180
COSTING_TIMEOUT=60

# Stage Retry Configuration
PLANNING_MAX_RETRIES=2
PARSING_MAX_RETRIES=2
ENRICHING_MAX_RETRIES=1
COSTING_MAX_RETRIES=2

# Job Configuration
JOB_TTL=3600
LOCK_TTL=300
WORKER_ID=orchestrator-1

# Downstream Services
TERRAFORM_EXECUTION_URL=http://localhost:8001
PLAN_INTERPRETER_URL=http://localhost:8002
METADATA_RESOLVER_URL=http://localhost:8003
PRICING_ENGINE_URL=http://localhost:8004
USAGE_MODELING_URL=http://localhost:8005
COST_AGGREGATION_URL=http://localhost:8006

# Service Authentication
SERVICE_AUTH_TOKEN=internal-service-token-change-in-production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server
HOST=0.0.0.0
PORT=8001
