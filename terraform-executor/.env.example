# Terraform
TERRAFORM_VERSION=1.6.0

# Resource Limits
MAX_EXECUTION_TIME=300
CPU_LIMIT=2
MEMORY_LIMIT=2048
MAX_WORKSPACE_SIZE=100

# Security
ALLOWED_PROVIDERS=aws,random,null
BLOCK_LOCAL_EXEC=true
BLOCK_EXTERNAL_DATA=true

# Workspace
WORKSPACE_BASE_DIR=/tmp/terraform-workspaces

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server
HOST=0.0.0.0
PORT=8002
